#include <REGX51.H>
void Delay1ms(unsigned int xms)		//@12.000MHz
{
	while(xms)
{unsigned char i, j;

	i = 2;
	j = 239;
	do
	{
		while (--j);
	} while (--i);
	xms--;
}
}

void main()
{
	unsigned char r=0;
while(1)
	{
		if(P3_1==0)
		{   
			Delay1ms(20);
			 while(P3_1==0);
			 Delay1ms(20);
			r++;
			P2=~r;
		}
	}
}
